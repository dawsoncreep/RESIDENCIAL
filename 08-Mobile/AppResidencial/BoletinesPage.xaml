<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppResidencial.BoletinesPage" Title="Boletines" BackgroundColor="Black">
    <StackLayout>
    <ListView>
        <ListView.Header>
            <Label Text="Pendientes" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
        </ListView.Header>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal"  >
                            <StackLayout Orientation="Vertical">
                                <Label x:Name="Name"></Label>
                                <Label x:Name="LastName"></Label>
                            </StackLayout>
                            <Image HeightRequest="30" WidthRequest="30" HorizontalOptions="EndAndExpand"></Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>
    </StackLayout>
</ContentPage>