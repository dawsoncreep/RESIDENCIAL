<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppResidencial.GenerarRegistroPage" Title="Preferentes Crear/Modificar" BackgroundColor="Black">
    <ContentPage.Content>

        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />

            </Grid.ColumnDefinitions>


            <Button Grid.Row="0" Grid.Column="0"  BackgroundColor="#2c1bb6" 
                  Image="guardar.png" Text="guardar" TextColor="White" />
            <Button Grid.Row="0" Grid.Column="1" BackgroundColor="#2c1bb6" TextColor="White"
                  Image="cancelar.png" Text="cancelar"/>
            <Frame Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4" BackgroundColor="Black">
                <StackLayout>
                    <StackLayout Orientation="Horizontal" >
                        <ImageButton  Source="{Binding RutaFoto}" Aspect="Fill" Command="{Binding SeleccionarFotoComand}" 
                              HeightRequest="100" WidthRequest="100"/>
                        <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" HorizontalOptions="Start" >
                            <Label  Text="Nombre:" FontAttributes="Bold" Margin="0,20,0,0" FontSize="Small" TextColor="White"/>
                            <Entry x:Name="lbNombre" Placeholder="Ingresa el nombre" WidthRequest="300" TextColor="White" PlaceholderColor="WhiteSmoke"/>
                        </StackLayout>

                    </StackLayout>
                    <StackLayout >
                        <Label TextColor="White" Text="Datos del vehiculo" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Micro"/>
                        <Label TextColor="White" Text="Placas:" FontAttributes="Bold" FontSize="Small" />
                        <Entry Placeholder="Ingresa n° de placas" TextColor="White"  PlaceholderColor="WhiteSmoke" />
                        <Label TextColor="White" Text="Marca:" FontAttributes="Bold" FontSize="Small" />
                        <Entry Placeholder="Ingresa la marca" TextColor="White" PlaceholderColor="WhiteSmoke"/>
                        <Label TextColor="White" Text="Modelo:" FontAttributes="Bold" FontSize="Small"/>
                        <Entry Placeholder="Ingresa el modelo" TextColor="White" PlaceholderColor="WhiteSmoke" />
                        <Label TextColor="White" Text="Color" FontAttributes="Bold" FontSize="Small"/>
                        <Entry Placeholder="Ingresa el color" TextColor="White" PlaceholderColor="WhiteSmoke" />
                    </StackLayout>
                </StackLayout>
            </Frame>

        </Grid>
