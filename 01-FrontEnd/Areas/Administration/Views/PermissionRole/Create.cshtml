@model Model.Custom.PermissionRoleForGridView

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administration/Views/Shared/_AdministrationMenu.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>@Resources.PermissionRole_Create_Title</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Create", "PermissionRole", FormMethod.Post, new { }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal col-xs-12 col-sm-offset-3 col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.lstPermissions, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.DropDownListFor(model => model.Permission.Id,
                             Model.lstPermissions.Select(s => new SelectListItem { Text = s.Name, Value = s.Id.ToString() }).ToList(),
                             new { @class = "form-control btn btn-default dropdown-toggle", type = "button" })

                        @Html.ValidationMessageFor(model => model.Permission, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.lstRoles, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.DropDownListFor(model => model.Role.Id,
                             Model.lstRoles.Select(s => new SelectListItem { Text = s.Name, Value = s.Id.ToString() }).ToList(),
                             new { @class = "form-control btn btn-default dropdown-toggle", type = "button" })

                        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Resources.Create" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="panel-footer">
        <div>
            @Html.ActionLink(Resources.BacktoList, "Index", "LocationUser", new { Area = "Administration" }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
