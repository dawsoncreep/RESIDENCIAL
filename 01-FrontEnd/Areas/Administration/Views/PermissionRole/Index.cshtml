@model List<PermissionRoleForGridView>
@{
    ViewBag.Title = "Users";
}

<h2 class="page-header">@ViewBag.Title</h2>
@Scripts.Render("~/bundles/users")


<div class="row" id="usersGridrow">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(m.Email, "Get", "Users", new { Area = "Administration", Id = m.Id.ToString() }, new { })
                    </td>
                    <td>@string.Join(", ", m.Roles.Select(s => s.Name))</td>
                </tr>
            }
        </tbody>
    </table>
</div>


