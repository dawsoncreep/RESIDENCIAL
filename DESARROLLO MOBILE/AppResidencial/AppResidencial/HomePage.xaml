                    BackgroundColor="Blue" TextColor="White"/>
        
        <Button x:Name="btnUsuario" Text="Usuario" BorderRadius="20" Margin="10,10,10,0"
                    BackgroundColor="Blue" TextColor="White"/>
        
        <Button x:Name="btnConfiguracion" Text="Configuracion" BorderRadius="20" Margin="10,10,10,0"
                    BackgroundColor="Blue" TextColor="White"/>
        
        <Button x:Name="btnPanico" Text="Boton de Panico" BorderRadius="20" Margin="10,80,10,0"
                    BackgroundColor="Blue" TextColor="White" />
        
